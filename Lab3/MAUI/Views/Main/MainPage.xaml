<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.MainPage"
             xmlns:local="clr-namespace:MAUI.Logic">

    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">

        <!-- Header -->
        <Label Text="Welcome to the application that manages a database related to currency exchange rates. You can view and manage existing records in the database."
               FontSize="16" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>
        <Label Text=" You can convert to/from USD and display the exchange rate of a currency over a selected time period."
       FontSize="16" 
       FontAttributes="Bold" 
       HorizontalOptions="Center"
       Margin="0,0,0,20"/>

        <!-- Buttons -->
        <Button Text="Show Database" Clicked="OnShowCurrenciesClicked" WidthRequest="200"/>
        <Button Text="Exchange Rate History" Clicked="OnShowDataClicked" WidthRequest="200"/>
        <Button Text="Convert Currencies" Clicked="OnConvertCurrencyClicked" WidthRequest="200"/>

    </VerticalStackLayout>

</ContentPage>
